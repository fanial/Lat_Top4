<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentDua">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_toStartOf="@id/btn_profile"
            android:padding="10dp"
            android:text="HOME"
            android:textColor="@color/purple_100"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_circle"
            android:contentDescription="@string/profile"
            android:src="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/halo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judul"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@+id/vUsername"
            android:padding="10dp"
            android:text="Hello,"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/judul"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:hint="Username"
            android:padding="10dp"
            android:textColorHint="#78909C"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/inThnLahir"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_below="@id/vUsername"
            android:layout_centerHorizontal="true"
            android:hint="Masukan Tahun Lahir"

            android:importantForAutofill="no"
            android:inputType="number"
            android:textColorHint="#757575" />

        <Button
            android:id="@+id/btn_frag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inThnLahir"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/purple_100"
            android:text="Hitung" />
    </RelativeLayout>

</FrameLayout>