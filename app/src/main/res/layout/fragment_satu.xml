<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentSatu">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/header_binar"
            android:background="@color/purple_100"
            />

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img1"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Login"
            android:textSize="32sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inUsername"
            android:layout_below="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="username"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/inPass"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/inUsername"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Login"
            android:backgroundTint="@color/purple_100"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/lupa_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Lupa Password"
            android:textColor="@color/purple_100" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:text="Register"
            android:textColor="@color/purple_100" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/chat"
            android:src="@drawable/ic_baseline_chat_24"
            app:backgroundTint="@color/white" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="310dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/chat"
            android:src="@drawable/ic_baseline_help_outline_24"
            app:backgroundTint="@color/white" />
    </RelativeLayout>
</FrameLayout>